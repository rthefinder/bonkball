# Bonkball Configuration

# Environment: development | production
NODE_ENV=development

# Network: mainnet-beta | devnet | testnet
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Token Configuration
TOKEN_MINT_ADDRESS=
TOKEN_DECIMALS=9

# Operator Keypair (DO NOT COMMIT ACTUAL KEYS)
# Option 1: Base58 encoded secret key
OPERATOR_PRIVATE_KEY=
# Option 2: Path to keypair file
# OPERATOR_KEYPAIR_PATH=./keypairs/operator.json

# Fee Source Configuration
FEE_SOURCE_TYPE=mock # webhook | api | wallet | mock

# For webhook mode:
WEBHOOK_PORT=3000
WEBHOOK_SECRET=your-webhook-secret-here

# For API mode:
FEE_API_URL=https://api.bonkers.xyz/v1/creator-fees
FEE_API_KEY=

# For wallet watcher mode:
FEE_COLLECTOR_WALLET=

# Execution Configuration
EPOCH_INTERVAL_SECONDS=1800 # 30 minutes
DRY_RUN=true

# Fee Allocation (percentages must sum to 100)
BUYBACK_PCT=60
ADD_LP_PCT=40
BURN_PCT_OF_BUYBACK=25
TREASURY_PCT=0

# Risk Parameters
MAX_BUDGET_PER_EPOCH_SOL=1.0
MIN_INTERVAL_SECONDS=900 # 15 minutes minimum
MAX_SLIPPAGE_BPS=300 # 3%
MAX_PRICE_IMPACT_BPS=500 # 5%
MIN_LIQUIDITY_THRESHOLD_SOL=10.0

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT_SECONDS=3600

# DEX Configuration
DEX_PROVIDER=mock # raydium | orca | meteora | mock
DEX_POOL_ADDRESS=

# Logging
LOG_LEVEL=info # trace | debug | info | warn | error

# Metrics
METRICS_PORT=9090
